<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-5">
  <div class="col-6 offset-3 mt-3">
    <h1 class="text-center mt-3">Sign Up</h1>
    <div class="col-6 offset-3">
      <form
        action="/signup"
        method="POST"
        class="needs-validation mt-2"
        novalidate
      >
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a username.</div>
          <div class="valid-feedback">Username looks good!</div>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid Email.</div>
          <div class="valid-feedback">Email looks good!</div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required
          />
        </div>

        <button class="btn btn-dark wl-btn mb-3">Sign up</button>
        <br>
<span>Already have an account? <a href="/signin">Sign in</a></span>

      </form>
    </div>
  </div>
</div>
<br /><br /><br /><br />
